@model List<eUseControl.Domain.Models.Product>
@{
    ViewBag.Title = "Sunglasses";
}

<style>
    body {
        background: #6ec6ff !important; /* lighter blue */
    }
    .sunglasses-header {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        margin-bottom: 2.5rem;
        flex-wrap: wrap;
        margin-top: 2.5rem;
    }
    .sunglasses-title {
        color: #1a355e;
        font-size: 2.7rem;
        font-family: 'Fredoka One', 'Segoe UI', Arial, sans-serif;
        letter-spacing: 2px;
        text-shadow: 0 4px 18px #b3cfff;
        margin: 0;
        flex-shrink: 0;
    }
    .sunglasses-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        max-width: 900px;
        margin: 0 auto;
        justify-content: center;
    }
    .sunglass-card {
        flex: 1 1 260px;
        max-width: 300px;
        min-width: 260px;
        border: 1px solid #1a355e;
        border-radius: 16px;
        padding: 1.2rem 1rem 1.5rem 1rem;
        background: #e3f0ff;
        box-shadow: 0 2px 12px #0d1a3a33;
        text-align: center;
        color: #1a355e;
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
        transition: opacity 0.3s, transform 0.3s;
    }
    .sunglass-card:hover {
        box-shadow: 0 6px 24px #6ec6ff;
        transform: translateY(-2px) scale(1.03);
    }
    .sunglass-card.hide {
        display: none !important;
    }
    .sunglass-card.placeholder {
        /* No longer used, but keep for safety */
        display: none !important;
    }
    .sunglass-img {
        width: 100%;
        max-width: 180px;
        height: 140px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 1rem;
        background: #fff;
    }
    .sunglass-name {
        font-size: 1.25rem;
        font-weight: 600;
        color: #28527a;
        margin-bottom: 0.5rem;
    }
    .sunglass-price {
        color: #2563eb;
        font-weight: 700;
        margin-bottom: 1rem;
        font-size: 1.1rem;
    }
    .sunglass-actions {
        display: flex;
        gap: 0.7rem;
        justify-content: center;
    }
    .add-to-cart {
        padding: 0.5rem 1.1rem;
        border: none;
        border-radius: 6px;
        background: #1a355e;
        color: #fff;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }
    .add-to-cart:hover {
        background: #2563eb;
        color: #fff;
    }
    .add-to-favorites {
        background: none;
        border: none;
        cursor: pointer;
        font-size: 1.6rem;
        color: #f44336;
        transition: color 0.2s;
        margin-left: 0.2rem;
    }
    .add-to-favorites:hover {
        color: #d32f2f;
    }
    .sunglass-desc {
        display: none;
        margin-top: 1rem;
        color: #1a355e;
        background: #fff;
        border-radius: 8px;
        padding: 0.7rem 1rem;
        font-size: 1rem;
        box-shadow: 0 2px 8px #b3cfff44;
        animation: fadeIn 0.3s;
    }
    .sunglass-card.active .sunglass-desc {
        display: block;
    }
    @@media (max-width: 900px) {
        .sunglasses-grid {
            grid-template-columns: 1fr 1fr;
        }
    }
    @@media (max-width: 600px) {
        .sunglasses-header {
            flex-direction: column;
            gap: 0.7rem;
        }
        .sunglasses-title {
            font-size: 2rem;
        }
        .sunglasses-grid {
            grid-template-columns: 1fr;
        }
    }
    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    .filter-btn-custom {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: #3a7bd5;
        color: #fff;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 25px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
        box-shadow: 0 2px 8px rgba(58,123,213,0.08);
        margin-left: 1.5rem;
    }
    .filter-btn-custom:hover, .filter-btn-custom.active {
        background: #28527a;
    }
    .filter-dropdown-custom { display: none; }
    .filter-btn-custom.show + .filter-dropdown-custom { display: block; }
    .filter-option-custom {
        display: block;
        width: 100%;
        padding: 0.7rem 1.2rem;
        font-size: 1rem;
        color: #1a355e;
        background: none;
        border: none;
        text-align: left;
        cursor: pointer;
        border-radius: 8px;
        transition: background 0.2s, color 0.2s;
    }
    .filter-option-custom:hover, .filter-option-custom.selected {
        background: #e3f0ff;
        color: #2563eb;
    }
</style>

<div class="sunglasses-header">
    <h2 class="sunglasses-title">Sunglasses</h2>
    <div style="position:relative;">
        <button class="filter-btn-custom" id="filterBtnCustom" type="button">
            <span style="font-size:1.3rem;">&#128269;</span> <span style="font-weight:bold;">Filter</span>
        </button>
        <div class="filter-dropdown-custom" id="filterDropdownCustom">
            <button class="filter-option-custom" type="button" onclick="applyFilter('All', event)">All</button>
            <button class="filter-option-custom" type="button" onclick="applyFilter('Men', event)">Men</button>
            <button class="filter-option-custom" type="button" onclick="applyFilter('Women', event)">Women</button>
        </div>
    </div>
</div>

<div class="sunglasses-grid" id="sunglassesGrid">
    @foreach (var item in Model)
    {
        <div class="sunglass-card" data-gender="@item.Gender" onclick="toggleDesc(this)">
            <img class="sunglass-img" src="@item.ImageUrl" alt="@item.Name" />
            <div class="sunglass-name">@item.Name</div>
            <div class="sunglass-price">@item.Price.Amount @item.Price.Currency</div>
            <div class="sunglass-actions">
                <button class="add-to-cart" onclick="event.stopPropagation();">Add to Cart</button>
                <button class="add-to-favorites" title="Add to Favorites" onclick="event.stopPropagation();">&#10084;</button>
            </div>
            <div class="sunglass-desc">@item.Description</div>
        </div>
    }
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var filterBtn = document.getElementById('filterBtnCustom');
        var filterDropdown = document.getElementById('filterDropdownCustom');
        filterBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            filterBtn.classList.toggle('show');
        });
        document.addEventListener('click', function(e) {
            filterBtn.classList.remove('show');
        });
        filterDropdown.addEventListener('click', function(e) {
            e.stopPropagation();
        });
        applyFilter('All');
    });
    function applyFilter(gender, e) {
        if (e) e.stopPropagation();
        var cards = document.querySelectorAll('.sunglass-card');
        var options = document.querySelectorAll('.filter-option-custom');
        options.forEach(function(opt) {
            opt.classList.remove('selected');
            if (opt.textContent === gender || (gender === 'All' && opt.textContent === 'All')) opt.classList.add('selected');
        });
        cards.forEach(function(card) {
            if (gender === 'All' || card.getAttribute('data-gender') === gender) {
                card.classList.remove('hide');
            } else {
                card.classList.add('hide');
            }
        });
        document.getElementById('filterBtnCustom').classList.remove('show');
    }
    function toggleDesc(card) {
        document.querySelectorAll('.sunglass-card').forEach(function(c) {
            if (c !== card) c.classList.remove('active');
        });
        card.classList.toggle('active');
    }
</script> 
</div> 