@{
    ViewBag.Title = "Register";
}

<style>
    .register-container {
        max-width: 400px;
        margin: 4rem auto 0 auto;
        background: #e3f0ff;
        border-radius: 18px;
        box-shadow: 0 4px 24px #b3cfff44;
        padding: 2.5rem 2rem 2rem 2rem;
        color: #1a355e;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .register-title {
        font-size: 2rem;
        font-family: 'Fredoka One', 'Segoe UI', Arial, sans-serif;
        margin-bottom: 1.5rem;
        color: #1a355e;
        text-align: center;
    }
    .register-form {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
    }
    .register-form input {
        padding: 0.7rem 1rem;
        border-radius: 8px;
        border: 1px solid #b3cfff;
        font-size: 1.1rem;
        outline: none;
        transition: border 0.2s;
    }
    .register-form input:focus {
        border: 1.5px solid #3a7bd5;
    }
    .register-btn {
        background: #3a7bd5;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
        margin-top: 0.5rem;
    }
    .register-btn:hover {
        background: #28527a;
    }
    .login-link {
        margin-top: 1.2rem;
        text-align: center;
        color: #2563eb;
        font-size: 1rem;
        text-decoration: none;
        font-weight: 500;
        display: block;
    }
    .login-link:hover {
        text-decoration: underline;
        color: #1a355e;
    }
    .register-error {
        color: #d32f2f;
        margin-bottom: 1rem;
        text-align: center;
    }
</style>

<div class="register-container">
    <div class="register-title">Create a BlueVision Account</div>
    @if (ViewBag.Error != null) {
        <div class="register-error">@ViewBag.Error</div>
    }
    <form class="register-form" method="post" action="/Account/Register">
        <input type="text" name="name" placeholder="Full name" required />
        <input type="text" name="username" placeholder="Username" required />
        <input type="email" name="email" placeholder="Gmail address" required />
        <input type="password" name="password" placeholder="Password" required />
        <input type="password" name="confirmPassword" placeholder="Confirm password" required />
        <input type="tel" name="phone" placeholder="Phone number" required />
        <button class="register-btn" type="submit">Register</button>
    </form>
    <a class="login-link" href="/Account/Login">Already have an account? Login</a>
</div> 