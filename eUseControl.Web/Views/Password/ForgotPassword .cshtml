@using System.Web.Optimization
@model eUseControl.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@ViewBag.Title</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">Enter your email address and we'll send you a link to reset your password.</p>
                    
                    @using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-block">Send Reset Link</button>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="text-center">
                        <a href="@Url.Action("Login", "Auth")">Return to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}