@{
    ViewBag.Title = "My Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="account-bg py-5">
    <div class="container">
        <div class="account-frame mx-auto">
            <h2 class="account-title mb-4">My Account</h2>
            <div class="account-info mb-4">
                <div class="account-row">
                    <span class="account-label">Username:</span>
                    <span class="account-value">@Session["UserName"]</span>
                </div>
                <div class="account-row">
                    <span class="account-label">Email:</span>
                    <span class="account-value">@Session["UserEmail"]</span>
                </div>
                <div class="account-row">
                    <span class="account-label">Role:</span>
                    <span class="account-value">@Session["UserRole"]</span>
                </div>
            </div>
            
            <form class="account-form mb-3" action="@Url.Action("ChangePassword", "Account")" method="post">
                @Html.AntiForgeryToken()
                <h4 class="account-section-title">Change Password</h4>
                <div class="form-group mb-3">
                    <label for="currentPassword">Current Password</label>
                    <input type="password" class="form-control" id="currentPassword" name="currentPassword" placeholder="Enter current password" required>
                </div>
                <div class="form-group mb-3">
                    <label for="newPassword">New Password</label>
                    <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Enter new password" required>
                </div>
                <div class="form-group mb-4">
                    <label for="confirmPassword">Confirm New Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Change Password</button>
            </form>
            
            <div class="mt-3 text-center">
                <a href="@Url.Action("Logout", "Login")" class="btn btn-secondary">Logout</a>
            </div>
        </div>
    </div>
</div>

<style>
.account-bg {
    background: #eaf6fb;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}
.account-frame {
    background: url('/Content/Account/Account.jpg') center center/cover no-repeat;
    border-radius: 18px;
    box-shadow: 0 4px 24px rgba(30,64,175,0.10);
    max-width: 500px;
    padding: 2.5rem 2rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
    text-align: center;
    border: 2px solid #3ec6e0;
    color: #1e3a8a;
    overflow: hidden;
}
.account-title {
    color: #1e3a8a;
    font-weight: bold;
    letter-spacing: 1px;
    font-size: 2rem;
}
.account-info {
    background: #eaf3fb;
    border-radius: 12px;
    padding: 1.2rem 1rem;
    margin-bottom: 2rem;
}
.account-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.7rem;
    font-size: 1.1rem;
}
.account-label {
    font-weight: 600;
    color: #1e3a8a;
}
.account-value {
    color: #28527a;
}
.account-section-title {
    color: #1e3a8a;
    font-size: 1.15rem;
    font-weight: 600;
    margin-bottom: 1rem;
    text-align: left;
}
.account-form {
    background: #f4f8fb;
    border-radius: 12px;
    padding: 1.2rem 1rem 1rem 1rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 2px 12px rgba(30,64,175,0.07);
}
.btn-primary {
    background: #3ec6e0;
    border: none;
    font-weight: 600;
}
.btn-primary:hover {
    background: #1e3a8a;
}
.btn-secondary {
    background: #1e3a8a;
    border: none;
    font-weight: 600;
    color: white;
    padding: 0.5rem 2rem;
}
.btn-secondary:hover {
    background: #3ec6e0;
    color: #fff;
}
</style>