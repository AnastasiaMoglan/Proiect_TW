@model eUseControl.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<style>
    .login-container {
        max-width: 400px;
        margin: 4rem auto 0 auto;
        background: #e3f0ff;
        border-radius: 18px;
        box-shadow: 0 4px 24px #b3cfff44;
        padding: 2.5rem 2rem 2rem 2rem;
        color: #1a355e;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .login-title {
        font-size: 2rem;
        font-family: 'Fredoka One', 'Segoe UI', Arial, sans-serif;
        margin-bottom: 1.5rem;
        color: #1a355e;
        text-align: center;
    }
    .login-form {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
    }
    .login-form input {
        padding: 0.7rem 1rem;
        border-radius: 8px;
        border: 1px solid #b3cfff;
        font-size: 1.1rem;
        outline: none;
        transition: border 0.2s;
    }
    .login-form input:focus {
        border: 1.5px solid #3a7bd5;
    }
    .login-btn {
        background: #3a7bd5;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
        margin-top: 0.5rem;
    }
    .login-btn:hover {
        background: #28527a;
    }
    .register-link {
        margin-top: 1.2rem;
        text-align: center;
        color: #2563eb;
        font-size: 1rem;
        text-decoration: none;
        font-weight: 500;
        display: block;
    }
    .register-link:hover {
        text-decoration: underline;
        color: #1a355e;
    }
    .login-error {
        color: #d32f2f;
        margin-bottom: 1rem;
        text-align: center;
    }
    .remember-me {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
    }
</style>

<div class="login-container">
    <div class="login-title">Login to BlueVision</div>
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="login-error">
            @Html.ValidationSummary(true)
        </div>
    }
    
    @using (Html.BeginForm("Index", "Login", new { ReturnUrl = Request.QueryString["returnUrl"] }, FormMethod.Post, new { @class = "login-form" }))
    {
        @Html.AntiForgeryToken()
        
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email address", type = "email", required = "required" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "login-error" })
        
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", required = "required" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "login-error" })
        
        <div class="remember-me">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>
        
        <button class="login-btn" type="submit">Login</button>
    }
    
    <a class="register-link" href="@Url.Action("Index", "Register")">Don't have an account? Create one</a>
</div>