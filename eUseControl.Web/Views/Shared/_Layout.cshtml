<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
    <style>
        body {
            background: #f4f8fb;
            color: #1a355e;
            font-family: 'Segoe UI', Arial, sans-serif;
        }
        .navbar-custom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #1a355e;
            padding: 1rem 2rem;
            box-shadow: 0 2px 8px rgba(26,53,94,0.08);
        }
        .logo {
            font-size: 2rem;
            color: #fff;
            font-weight: bold;
            letter-spacing: 2px;
        }
        .navbar-center {
            display: flex;
            gap: 1rem;
        }
        .nav-btn {
            background: #3a7bd5;
            color: #fff;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 25px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: background 0.2s;
            box-shadow: 0 2px 8px rgba(58,123,213,0.08);
        }
        .nav-btn:hover {
            background: #28527a;
        }
        .products-btn {
            border-bottom: 4px solid #28527a;
            font-weight: bold;
        }
        .login-btn {
            background: linear-gradient(180deg, #3a7bd5 60%, #28527a 100%);
            color: #fff;
            border: none;
            padding: 0.6rem 1.2rem;
            border-radius: 12px;
            font-size: 1rem;
            cursor: pointer;
            font-weight: bold;
            margin-left: 0.5rem;
            box-shadow: 0 4px 12px rgba(26,53,94,0.13), 0 1.5px 0 #fff2 inset;
            transition: background 0.2s, box-shadow 0.2s, transform 0.1s;
        }
        .login-btn:hover {
            background: linear-gradient(180deg, #3a7bd5 80%, #1a355e 100%);
            box-shadow: 0 6px 18px #3a7bd5, 0 1.5px 0 #fff2 inset;
            color: #fff;
        }
        .home-hero {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 3rem 2rem;
            background: linear-gradient(90deg, #e3f0ff 60%, #b3cfff 100%);
            border-radius: 0 0 30px 30px;
            margin-bottom: 2rem;
        }
        .hero-content {
            max-width: 50%;
        }
        .hero-content h1 {
            font-size: 2.5rem;
            color: #1a355e;
            margin-bottom: 1rem;
        }
        .hero-content p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
        }
        .hero-buttons {
            display: flex;
            gap: 1rem;
        }
        .hero-image img {
            max-width: 350px;
            border-radius: 20px;
            box-shadow: 0 4px 24px rgba(26,53,94,0.12);
        }
        .footer-custom {
            background: #142850;
            color: #fff;
            padding: 2rem 0 0.5rem 0;
            border-radius: 0 0 20px 20px;
            margin-top: 2rem;
        }
        .footer-row {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 3rem;
            margin-bottom: 1.5rem;
        }
        .footer-item {
            display: flex;
            align-items: center;
            gap: 0.7rem;
        }
        .footer-icon {
            font-size: 2rem;
            color: #fff;
        }
        .footer-link {
            color: #fff;
            font-size: 1.15rem;
            font-weight: 500;
            cursor: pointer;
            transition: color 0.2s;
        }
        .footer-link:hover {
            color: #3a7bd5;
        }
        .footer-bottom {
            text-align: center;
            color: #fff;
            font-size: 0.95rem;
            opacity: 0.85;
            border-top: 1px solid #27496d;
            padding-top: 1rem;
        }
        @@media (max-width: 800px) {
            .footer-row {
                flex-direction: column;
                gap: 1.5rem;
            }
        }
        .nav-dropdown {
            position: relative;
            display: inline-block;
        }
        .products-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: bold;
            border-bottom: none;
            background: #fff;
            color: #1a355e;
            box-shadow: none;
            border-radius: 25px 25px 0 0;
            padding-right: 1.2rem;
            padding-left: 1.2rem;
        }
        .products-btn .nav-icon {
            font-size: 1.3rem;
        }
        .dropdown-arrow {
            font-size: 1rem;
            margin-left: 0.3rem;
        }
        .products-btn:hover, .nav-dropdown:hover .products-btn {
            background: #e3f0ff;
            color: #3a7bd5;
        }
        .dropdown-menu {
            display: none;
            position: absolute;
            left: 0;
            top: 100%;
            min-width: 220px;
            background: #fff;
            box-shadow: 0 4px 24px rgba(26,53,94,0.12);
            border-radius: 0 0 16px 16px;
            z-index: 100;
            padding: 1rem 0.5rem;
        }
        .nav-dropdown:hover .dropdown-menu {
            display: block;
        }
        .dropdown-item {
            display: flex;
            align-items: center;
            gap: 0.7rem;
            font-size: 1.1rem;
            color: #444;
            padding: 0.6rem 1rem;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.2s, color 0.2s;
        }
        .dropdown-item:hover {
            background: #e3f0ff;
            color: #3a7bd5;
        }
        .dropdown-icon {
            font-size: 1.4rem;
        }
        .medical-btn {
            background: #3a7bd5;
            color: #fff;
            font-weight: bold;
            border-bottom: 4px solid #28527a;
        }
        .medical-btn:hover {
            background: #28527a;
            color: #fff;
        }
        .icon-btn {
            background: linear-gradient(180deg, #3a7bd5 60%, #28527a 100%);
            border: none;
            margin: 0 0.3rem;
            padding: 0.3rem 0.7rem;
            cursor: pointer;
            font-size: 1.7rem;
            color: #fff;
            position: relative;
            border-radius: 12px;
            box-shadow: 0 4px 12px rgba(26,53,94,0.13), 0 1.5px 0 #fff2 inset;
            transition: box-shadow 0.2s, transform 0.1s, color 0.2s, background 0.2s;
            display: inline-flex;
            align-items: center;
            text-decoration: none;
        }
        .icon-btn:active {
            box-shadow: 0 2px 6px rgba(26,53,94,0.18), 0 1.5px 0 #fff2 inset;
            transform: translateY(2px);
        }
        .icon-btn:hover {
            color: #fff;
            background: linear-gradient(180deg, #3a7bd5 80%, #1a355e 100%);
            box-shadow: 0 6px 18px #3a7bd5, 0 1.5px 0 #fff2 inset;
        }
        .icon-cart {
            font-size: 1.7rem;
        }
        .icon-heart {
            font-size: 1.7rem;
            color: #d32f2f !important;
        }
        .icon-user {
            font-size: 1.7rem;
        }
        .icon-badge {
            position: absolute;
            top: 0.1rem;
            right: 0.2rem;
            background: #d32f2f;
            color: #fff;
            border-radius: 50%;
            font-size: 0.85rem;
            padding: 0.1rem 0.45rem;
            font-weight: bold;
            line-height: 1;
        }
        .icon-3d {
            box-shadow: 0 4px 12px rgba(26,53,94,0.13), 0 1.5px 0 #fff2 inset;
            background: linear-gradient(180deg, #3a7bd5 60%, #28527a 100%);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar-custom">
            <div class="navbar-left">
                <span class="logo">BlueVision</span>
            </div>
            <div class="navbar-center">
                <div class="nav-dropdown">
                    <button class="nav-btn products-btn">
                        <span class="nav-icon">&#128083;</span>
                        Produse <span class="dropdown-arrow">&#9662;</span>
                    </button>
                    <div class="dropdown-menu">
                        <div class="dropdown-item"><span class="dropdown-icon">&#128083;</span> Ochelari de soare</div>
                        <div class="dropdown-item"><span class="dropdown-icon">&#128085;</span> Rame optice</div>
                        <div class="dropdown-item"><span class="dropdown-icon">&#128065;</span> Lentile de contact</div>
                        <div class="dropdown-item"><span class="dropdown-icon">&#128137;</span> Accesorii și întreținere</div>
                    </div>
                </div>
                <button class="nav-btn">Shops</button>
                <button class="nav-btn">About Us</button>
                <button class="nav-btn">Contact Us</button>
                <a href="/MedicalConsultation" class="nav-btn medical-btn">Medical Consultation</a>
            </div>
            <div class="navbar-right">
                <a href="/MyOrder" class="icon-btn icon-3d" title="My Order">
                    <span class="icon-cart">&#128722;</span>
                </a>
                <a href="/Favorites" class="icon-btn icon-3d" title="Favorites" style="position:relative;">
                    <span class="icon-heart">&#10084;</span>
                    <span class="icon-badge">0</span>
                </a>
                <a href="/Account" class="icon-btn icon-3d" title="Account">
                    <span class="icon-user">&#128100;</span>
                </a>
                <button class="login-btn" title="Login">Login</button>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer class="footer-custom">
        <div class="footer-row">
            <div class="footer-item">
                <span class="footer-icon">&#8505;</span>
                <a href="/TermsAndConds" class="footer-link">Terms and Conditions</a>
            </div>
            <div class="footer-item">
                <span class="footer-icon">&#128100;</span>
                <span class="footer-link">Our Team</span>
            </div>
            <div class="footer-item">
                <span class="footer-icon">&#128273;</span>
                <span class="footer-link">User Account</span>
            </div>
            <div class="footer-item">
                <span class="footer-icon">&#128205;</span>
                <span class="footer-link">Stores</span>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year BlueVision Optical. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>