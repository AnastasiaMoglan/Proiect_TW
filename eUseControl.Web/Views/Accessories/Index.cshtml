@model IEnumerable<eUseControl.Web.Models.AccessoriesProduct>
@{
    ViewBag.Title = "Accessories";
    var categories = new[] { "All", "Case", "Spray", "Cloth", "Cord" };
    
    // Dictionary for product descriptions
    var descriptions = new Dictionary<string, string> {
        // Cases
        {"UrbanShield Hard Case", "Durable and sleek for everyday protection"},
        {"VelvetTouch Soft Pouch", "Soft fabric for gentle lens storage"},
        {"Compact Zip Case", "Lightweight and easy to carry anywhere"},
        {"TravelPro Protective Box", "Rugged case ideal for travel and safety"},
        // Sprays
        {"CrystalClear Cleaning Spray", "Removes dust and smudges instantly"},
        {"AntiFog Pro Solution", "Prevents lens fog in any condition"},
        {"VisionFresh Mist", "Refresh lenses with gentle natural spray"},
        {"LensGuard Cleaner", "Deep cleaning formula for clear vision"},
        // Cloths
        {"MicroSilk Lens Cloth", "Ultra-soft material for scratch-free cleaning"},
        {"OptiWipe Premium", "Premium cloth for flawless lens care"},
        {"GentleTouch Cleaner", "Gentle texture for all lens types"},
        {"ClearView Microfiber", "Streak-free clarity in every swipe"},
        {"SmartShine Cloth", "Pocket-size cloth for quick shine"},
        // Cords & Chains
        {"ClassicLoop Cord", "Timeless design for daily wear comfort"},
        {"GoldenLink Chain", "Elegant chain for premium frame look"},
        {"SportFlex Strap", "Adjustable grip for active lifestyle"},
        {"PearlGrace Eyewear Chain", "Stylish pearl accent for chic frames"}
    };
}

<div class="accessories-bg">
    <div class="accessories-header-row accessories-header-flex">
        <div class="accessories-title-wrap">
            <h1 class="accessories-title">Accessories</h1>
        </div>
        <div class="filter-bar">
            <button class="filter-toggle" id="filterBtn" onclick="toggleFilterDropdown()">
                <span class="filter-icon">&#128269;</span>
                <span class="filter-text">Filter</span>
            </button>
            <div class="filter-dropdown" id="filterDropdown">
                @foreach (var cat in categories)
                {
                    var filterVal = cat.ToLower();
                    <div class="filter-option" data-filter="@filterVal" onclick="filterAccessories('@filterVal')">@cat</div>
                }
            </div>
        </div>
    </div>
    <div class="products-grid accessories-grid" id="productsGrid">
        @if (Model != null)
        {
            int i = 0;
            foreach (var product in Model)
            {
                <div class="product-card" data-category="@product.Category">
                    <div class="product-img-wrap"><img src="@product.Image" alt="Accessory @i" /></div>
                    <div class="product-title">@product.Name</div>
                    <div class="product-price">$@product.Price.ToString("0.00")</div>
                    <div class="product-description">
                        @(descriptions.ContainsKey(product.Name) ? descriptions[product.Name] : "")
                    </div>
                    <div class="product-actions">
                        <button class="add-cart-btn">Add to Cart</button>
                        <span class="heart-icon">&#10084;</span>
                    </div>
                </div>
                i++;
            }
        }
    </div>
</div>

<style>
    body {
        background: #6ec6ff !important; /* Match Sunglasses page background */
    }
    
    .accessories-bg {
        min-height: 100vh;
        padding-bottom: 40px;
    }
    
    .accessories-header-flex {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 1200px;
        margin: 0 auto;
        padding-top: 2.5rem;
        margin-bottom: 1.5rem;
    }
    
    .accessories-title-wrap {
        flex: 1;
        display: flex;
        justify-content: center;
    }
    
    .accessories-title {
        font-family: 'Fredoka One', 'Segoe UI', Arial, sans-serif;
        font-size: 3rem;
        color: #1a355e;
        letter-spacing: 2px;
        text-shadow: 0 4px 18px #b3cfff;
        margin: 0;
        text-align: center;
    }
    
    .filter-bar {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        position: relative;
        margin-left: 2rem;
    }
    
    .filter-toggle {
        background: #3a7bd5;
        color: #fff;
        border: none;
        border-radius: 30px;
        padding: 1rem 2.5rem;
        font-size: 1.5rem;
        font-weight: bold;
        box-shadow: 0 2px 8px rgba(58,123,213,0.08);
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.7rem;
        transition: background 0.2s;
    }
    
    .filter-toggle:hover {
        background: #28527a;
    }
    
    .filter-icon {
        display: flex;
        align-items: center;
        font-size: 1.7rem;
        margin-right: 0.5rem;
    }
    
    .filter-text {
        font-weight: bold;
        font-size: 1.3rem;
    }
    
    .filter-dropdown {
        display: none;
        flex-direction: column;
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(58,123,213,0.10);
        min-width: 220px;
        position: absolute;
        right: 0;
        top: 110%;
        z-index: 100;
    }
    
    .filter-dropdown.show {
        display: flex;
    }
    
    .filter-option {
        padding: 1rem 1.5rem;
        font-size: 1.15rem;
        color: #1a355e;
        cursor: pointer;
        border-radius: 12px;
        transition: background 0.2s, color 0.2s;
        text-align: left;
    }
    
    .filter-option:hover {
        background: #e3f0ff;
        color: #2563eb;
    }
    
    .accessories-grid {
        margin: 0 auto;
        max-width: 1200px;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(270px, 1fr));
        gap: 2.5rem;
        padding: 2rem 1rem;
    }
    
    .product-card {
        background: #e3f0ff; /* Match Sunglasses card background */
        border-radius: 16px;
        border: 1px solid #1a355e;
        box-shadow: 0 2px 12px rgba(13,26,58,0.2);
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.5rem 1rem;
        min-height: 370px;
        transition: all 0.3s ease;
    }
    
    .product-card:hover {
        box-shadow: 0 6px 24px #6ec6ff;
        transform: translateY(-2px) scale(1.03);
    }
    
    .product-img-wrap {
        width: 100%;
        height: 180px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.2rem;
    }
    
    .product-card img {
        max-width: 90%;
        max-height: 170px;
        border-radius: 12px;
        background: #fff;
        box-shadow: 0 2px 8px rgba(179,207,255,0.27);
    }
    
    .product-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #28527a;
        margin-bottom: 0.7rem;
        text-align: center;
    }
    
    .product-price {
        color: #2563eb;
        font-weight: 700;
        margin-bottom: 1.2rem;
        font-size: 1.1rem;
        min-height: 1.2em;
    }
    
    .product-actions {
        display: flex;
        align-items: center;
        gap: 1.2rem;
        margin-top: auto;
    }
    
    .add-cart-btn {
        padding: 0.6rem 1.5rem;
        border-radius: 10px;
        background: #1a355e;
        color: #fff;
        border: none;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.2s;
    }
    
    .add-cart-btn:hover {
        background: #2563eb;
    }
    
    .heart-icon {
        font-size: 1.5rem;
        color: #d32f2f;
        cursor: pointer;
        transition: color 0.2s;
    }
    
    .heart-icon:hover {
        color: #a31515;
    }
    
    .product-card.hide {
        display: none;
    }
    
    .product-description {
        font-size: 0.9rem;
        color: #666;
        text-align: center;
        margin-bottom: 1rem;
        padding: 0 0.5rem;
        line-height: 1.4;
    }
    
    @@media (max-width: 900px) {
        .accessories-header-flex {
            flex-direction: column;
            align-items: stretch;
            gap: 1.2rem;
        }
        .accessories-title-wrap {
            justify-content: center;
        }
        .filter-bar {
            align-items: flex-end;
            margin-left: 0;
        }
    }
    
    @@media (max-width: 600px) {
        .accessories-header-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 1.2rem;
            padding-top: 1.2rem;
        }
        .accessories-title {
            font-size: 2rem;
        }
    }
</style>

<script>
    function toggleFilterDropdown() {
        document.getElementById('filterDropdown').classList.toggle('show');
    }

    function filterAccessories(category) {
        const cards = document.querySelectorAll('.product-card');
        cards.forEach(card => {
            if (category === 'all' || card.dataset.category === category) {
                card.classList.remove('hide');
            } else {
                card.classList.add('hide');
            }
        });
        
        // Close dropdown
        document.getElementById('filterDropdown').classList.remove('show');
    }
</script>