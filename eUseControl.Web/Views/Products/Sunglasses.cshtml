@model List<eUseControl.Domain.Entities.Product>
@{
    ViewBag.Title = "Sunglasses Collection";
}

<div class="container">
    <!-- Page Header -->
    <div class="row mb-5">
        <div class="col-md-12">
            <h1>Sunglasses Collection</h1>
            <p class="lead">Protect your eyes in style with our premium sunglasses</p>
        </div>
    </div>

    <!-- Error Message Display -->
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            <h4>Error</h4>
            <p>@ViewBag.ErrorMessage</p>
            @if (!string.IsNullOrEmpty(ViewBag.DetailedError))
            {
                <p><small>Details: @ViewBag.DetailedError</small></p>
            }
        </div>
    }

    <!-- Product Filters -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5>Filter Options</h5>
                    <div class="d-flex flex-wrap">
                        <a href="#" class="btn btn-outline-secondary btn-sm m-1">All</a>
                        <a href="#" class="btn btn-outline-secondary btn-sm m-1">Men</a>
                        <a href="#" class="btn btn-outline-secondary btn-sm m-1">Women</a>
                        <a href="#" class="btn btn-outline-secondary btn-sm m-1">Unisex</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@Url.Content(product.ImageUrl)" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text font-weight-bold">$@product.Price.ToString("F2")</p>
                            <p class="card-text"><small class="text-muted">For: @product.Gender</small></p>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <a href="@Url.Action("Detail", "Products", new { id = product.Id })" class="btn btn-primary">View Details</a>
                            <button class="btn btn-outline-success ml-2">Add to Cart</button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <h3>No sunglasses found</h3>
                <p>Please check back later for new products</p>
            </div>
        }
    </div>
</div>