@model eUseControl.Web.Models.ProductsViewModel
@{
    ViewBag.Title = "Our Eyewear Collection";
}

<div class="container">
    <!-- Page Header -->
    <div class="row mb-5">
        <div class="col-md-12 text-center">
            <h1>Our Eyewear Collection</h1>
            <p class="lead">Discover our premium selection of eyewear products</p>
        </div>
    </div>

    <!-- Error Message Display -->
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            <h4>Error</h4>
            <p>@ViewBag.ErrorMessage</p>
            @if (!string.IsNullOrEmpty(ViewBag.DetailedError))
            {
                <p><small>Details: @ViewBag.DetailedError</small></p>
            }
        </div>
    }

    <!-- Sunglasses Section -->
    <div class="row mb-5">
        <div class="col-md-12">
            <h2 class="mb-4">
                Sunglasses
                <a href="@Url.Action("Sunglasses", "Products")" class="btn btn-sm btn-outline-secondary ml-2">View All</a>
            </h2>
            
            <div class="row">
                @foreach (var product in Model.FeaturedSunglasses)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="@Url.Content(product.ImageUrl)" class="card-img-top" alt="@product.Name">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@(product.Description.Length > 100 ? product.Description.Substring(0, 97) + "..." : product.Description)</p>
                                <p class="card-text font-weight-bold">$@product.Price.ToString("F2")</p>
                                <p class="card-text"><small class="text-muted">For: @product.Gender</small></p>
                            </div>
                            <div class="card-footer bg-white border-top-0">
                                <a href="@Url.Action("Detail", "Products", new { id = product.Id })" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Optical Frames Section -->
    <div class="row mb-5">
        <div class="col-md-12">
            <h2 class="mb-4">
                Optical Frames
                <a href="@Url.Action("OpticalFrames", "Products")" class="btn btn-sm btn-outline-secondary ml-2">View All</a>
            </h2>
            
            <div class="row">
                @foreach (var product in Model.FeaturedOpticalFrames)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="@Url.Content(product.ImageUrl)" class="card-img-top" alt="@product.Name">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@(product.Description.Length > 100 ? product.Description.Substring(0, 97) + "..." : product.Description)</p>
                                <p class="card-text font-weight-bold">$@product.Price.ToString("F2")</p>
                                <p class="card-text"><small class="text-muted">Vision Type: @product.VisionType</small></p>
                            </div>
                            <div class="card-footer bg-white border-top-0">
                                <a href="@Url.Action("Detail", "Products", new { id = product.Id })" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Lenses Section -->
    <div class="row mb-5">
        <div class="col-md-12">
            <h2 class="mb-4">
                Lenses
                <a href="@Url.Action("Lenses", "Products")" class="btn btn-sm btn-outline-secondary ml-2">View All</a>
            </h2>
            
            <div class="row">
                @foreach (var product in Model.FeaturedLenses)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="@Url.Content(product.ImageUrl)" class="card-img-top" alt="@product.Name">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@(product.Description.Length > 100 ? product.Description.Substring(0, 97) + "..." : product.Description)</p>
                                <div class="price-section">
                                    <p class="card-text font-weight-bold">$@product.Price.ToString("F2")</p>
                                </div>
                            </div>
                            <div class="card-footer bg-white border-top-0">
                                <a href="@Url.Action("Detail", "Products", new { id = product.Id })" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>