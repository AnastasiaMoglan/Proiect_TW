    }
    .contact-details p {
        color: #28527a;
        font-size: 1.1rem;
        margin: 0;
        text-shadow: 0 1px 2px rgba(255,255,255,0.7), 0 1px 2px rgba(0,0,0,0.08);
    }
    .contact-link {
        color: #28527a;
        text-decoration: none;
        transition: color 0.2s;
        text-shadow: 0 1px 2px rgba(255,255,255,0.7), 0 1px 2px rgba(0,0,0,0.08);
    }
    .contact-link:hover {
        color: #3a7bd5;
    }
    @@media (max-width: 768px) {
        .contact-frame {
            padding: 2rem 1.5rem;
